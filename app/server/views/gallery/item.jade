div.list_item_performer.grid-item.col-sm-4(class="col-md-4 gallery_footage")
	a(href="/#{box.users[0].permalink}/gallery/#{box.permalink}/", title=box.title)
		.image_box
			.footage_stats.box_stats
				ul.list-inline
					li
						i(class="fa fa-download")
						span= box.stats.downloads
					li
						i(class="fa fa-eye")
						span= box.stats.visits
			each file, i in box.files
				if i === 0
					img(alt=box.title, src=_h.media.processImage(file.file, 480, 320))
		.title_and_info_container
			h3= box.title
			ul.list-inline.box_other_infos
				li
					i(class="fa fa-tags")
					- if(box.tags)
						- for (var t=0;t<box.tags.length;t++) {
								span= box.tags[t]+" "
						- }
					i(class="fa fa-floppy-o")
					span= box.sizes
